---
interface Props {
  title: string;
  subtitle?: string;
  align?: "left" | "center";
  light?: boolean;
}

const { title, subtitle, align = "center", light = false } = Astro.props;

const alignClasses = align === "center" ? "text-center items-center" : "text-left items-start";
const titleColor = light ? "text-white" : "text-text-primary";
const subtitleColor = light ? "text-white/70" : "text-text-secondary";
---

<div class:list={["flex flex-col gap-4 mb-12", alignClasses]}>
  <!-- Accent line -->
  <div class="w-12 h-1 bg-teal rounded-full" aria-hidden="true"></div>

  <h2 class:list={["text-3xl md:text-4xl font-bold tracking-tight", titleColor]}>
    {title}
  </h2>

  {subtitle && (
    <p class:list={["text-base md:text-lg max-w-2xl leading-relaxed", subtitleColor]}>
      {subtitle}
    </p>
  )}
</div>
