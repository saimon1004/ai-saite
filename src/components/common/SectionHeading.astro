---
interface Props {
  id?: string;
  titleEn: string;
  titleJa: string;
  light?: boolean;
}

const { id, titleEn, titleJa, light = false } = Astro.props;
---

<div id={id} class="scroll-mt-24 text-center mb-20">
  <h2
    class:list={[
      "font-heading text-5xl sm:text-6xl md:text-7xl font-black tracking-wider uppercase",
      light ? "text-white" : "text-navy",
    ]}
  >
    {titleEn}
  </h2>
  <p
    class:list={[
      "mt-3 text-base",
      light ? "text-white/60" : "text-text-secondary",
    ]}
  >
    {titleJa}
  </p>
</div>
