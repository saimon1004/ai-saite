---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="bg-surface rounded-[var(--radius-card)] border border-border p-6 shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1">
  <div class="flex items-start gap-4">
    <!-- Number -->
    <span class="text-4xl md:text-5xl font-black text-teal leading-none shrink-0">
      {number}
    </span>

    <div class="min-w-0">
      <!-- Title -->
      <h3 class="text-base md:text-lg font-bold text-navy mb-2">{title}</h3>

      <!-- Description -->
      <p class="text-sm text-text-secondary leading-relaxed">{description}</p>
    </div>
  </div>
</div>
