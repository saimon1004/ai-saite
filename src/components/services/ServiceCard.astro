---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: "recruitment" | "ai" | "backoffice";
}

const { title, description, href, icon } = Astro.props;
---

<article class="glass-light rounded-[var(--radius-card)] p-6 md:p-8 transition-all duration-300 hover:shadow-card-hover hover:-translate-y-1 group">
  <div class="flex flex-col gap-4">
    <!-- Icon -->
    <div class="w-14 h-14 rounded-xl bg-navy/5 flex items-center justify-center text-navy group-hover:bg-navy group-hover:text-white transition-colors duration-300">
      {icon === "recruitment" && (
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      )}
      {icon === "ai" && (
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-1.341 4.022a1.125 1.125 0 01-1.068.778H7.409a1.125 1.125 0 01-1.068-.778L5 14.5m14 0H5m14 0l.75-1.5M5 14.5l-.75-1.5M12 10.5v.75" />
        </svg>
      )}
      {icon === "backoffice" && (
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21" />
        </svg>
      )}
    </div>

    <!-- Title -->
    <h3 class="text-xl font-bold text-navy">{title}</h3>

    <!-- Description -->
    <p class="text-text-secondary leading-relaxed text-sm">{description}</p>

    <!-- Link -->
    <a
      href={href}
      class="inline-flex items-center gap-1 text-teal font-bold text-sm hover:gap-2 transition-all duration-200 mt-auto"
    >
      詳しく見る
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</article>
