---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/common/Button.astro";

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="ページが見つかりません | 株式会社SAIMON"
  description="お探しのページが見つかりませんでした。URLが正しいかご確認ください。"
>
  <div class="min-h-screen flex items-center justify-center bg-surface px-4">
    <div class="text-center max-w-lg mx-auto">
      <!-- Large 404 text -->
      <p class="text-[10rem] sm:text-[14rem] font-black leading-none text-navy/10 select-none" aria-hidden="true">
        404
      </p>

      <!-- Message -->
      <div class="-mt-8 sm:-mt-12 relative">
        <h1 class="text-2xl sm:text-3xl font-bold text-text-primary mb-3">
          お探しのページが見つかりませんでした
        </h1>
        <p class="text-text-secondary mb-8 leading-relaxed">
          URLが正しいかご確認ください。
        </p>

        <!-- Home button -->
        <Button variant="primary" size="lg" href={`${base}`}>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          ホームに戻る
        </Button>
      </div>
    </div>
  </div>
</BaseLayout>
