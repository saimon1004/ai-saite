---
import PageLayout from "../layouts/PageLayout.astro";
import Container from "../components/ui/Container.astro";
import AnimateOnScroll from "../components/ui/AnimateOnScroll.astro";
import { company } from "../data/company";

const base = import.meta.env.BASE_URL;

const breadcrumbs = [
  { label: "ホーム", href: `${base}` },
  { label: "お問い合わせ" },
];
---

<PageLayout
  title="お問い合わせ | 株式会社SAIMON"
  description="株式会社SAIMONへのお問い合わせ。サービスに関するご質問やご相談はこちらからお気軽にどうぞ。"
  breadcrumbs={breadcrumbs}
>
  <!-- Hero Banner -->
  <section class="relative overflow-hidden bg-gradient-to-br from-navy via-navy-light to-navy py-20 sm:py-28">
    <div class="absolute inset-0 opacity-10" aria-hidden="true">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-teal rounded-full blur-3xl"></div>
    </div>
    <Container class="relative text-center">
      <p class="text-teal text-sm font-bold tracking-[0.3em] uppercase mb-4">Contact</p>
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-black text-white tracking-tight">
        CONTACT
      </h1>
      <p class="mt-4 text-lg text-white/70">お問い合わせ</p>
    </Container>
  </section>

  <!-- Contact Form + Info -->
  <section class="py-20 sm:py-28 bg-surface">
    <Container>
      <div class="grid lg:grid-cols-[1fr_380px] gap-12 lg:gap-16 max-w-5xl mx-auto">

        <!-- Left: Contact Form -->
        <AnimateOnScroll>
          <div>
            <h2 class="text-2xl sm:text-3xl font-bold text-text-primary mb-2">
              お問い合わせフォーム
            </h2>
            <p class="text-text-secondary mb-8">
              以下のフォームに必要事項をご記入の上、送信してください。
            </p>

            <form
              id="contact-form"
              action="https://api.web3forms.com/submit"
              method="POST"
              class="space-y-6"
              novalidate
            >
              <!-- Hidden fields -->
              <input type="hidden" name="access_key" value="YOUR_ACCESS_KEY_HERE" />
              <input type="hidden" name="from_name" value="SAIMONウェブサイト" />
              <input type="hidden" name="subject" value="ウェブサイトからのお問い合わせ" />

              <!-- Honeypot -->
              <div class="hidden" aria-hidden="true">
                <input type="checkbox" name="botcheck" tabindex="-1" autocomplete="off" />
              </div>

              <!-- お名前 -->
              <div>
                <label for="name" class="block text-sm font-bold text-text-primary mb-2">
                  お名前 <span class="text-red-500" aria-label="必須">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  aria-required="true"
                  placeholder="山田 太郎"
                  class="w-full px-4 py-3 rounded-[var(--radius-button)] border border-border bg-surface text-text-primary placeholder:text-text-secondary/50 focus:outline-none focus:ring-2 focus:ring-teal focus:border-transparent transition-all duration-200"
                />
              </div>

              <!-- メールアドレス -->
              <div>
                <label for="email" class="block text-sm font-bold text-text-primary mb-2">
                  メールアドレス <span class="text-red-500" aria-label="必須">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  aria-required="true"
                  placeholder="example@company.co.jp"
                  class="w-full px-4 py-3 rounded-[var(--radius-button)] border border-border bg-surface text-text-primary placeholder:text-text-secondary/50 focus:outline-none focus:ring-2 focus:ring-teal focus:border-transparent transition-all duration-200"
                />
              </div>

              <!-- お問い合わせ種別 -->
              <div>
                <label for="inquiry_type" class="block text-sm font-bold text-text-primary mb-2">
                  お問い合わせ種別
                </label>
                <select
                  id="inquiry_type"
                  name="inquiry_type"
                  class="w-full px-4 py-3 rounded-[var(--radius-button)] border border-border bg-surface text-text-primary focus:outline-none focus:ring-2 focus:ring-teal focus:border-transparent transition-all duration-200 appearance-none bg-[url('data:image/svg+xml;charset=UTF-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%20fill%3D%22none%22%20stroke%3D%22%2364748b%22%20stroke-width%3D%222%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%3E%3Cpath%20d%3D%22m6%209%206%206%206-6%22%2F%3E%3C%2Fsvg%3E')] bg-[length:20px] bg-[right_12px_center] bg-no-repeat"
                >
                  <option value="">選択してください</option>
                  <option value="サービスについて">サービスについて</option>
                  <option value="採用について">採用について</option>
                  <option value="AI研修について">AI研修について</option>
                  <option value="その他">その他</option>
                </select>
              </div>

              <!-- お問い合わせ内容 -->
              <div>
                <label for="message" class="block text-sm font-bold text-text-primary mb-2">
                  お問い合わせ内容 <span class="text-red-500" aria-label="必須">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  aria-required="true"
                  rows="6"
                  placeholder="お問い合わせ内容をご記入ください"
                  class="w-full px-4 py-3 rounded-[var(--radius-button)] border border-border bg-surface text-text-primary placeholder:text-text-secondary/50 focus:outline-none focus:ring-2 focus:ring-teal focus:border-transparent transition-all duration-200 resize-vertical"
                ></textarea>
              </div>

              <!-- Privacy consent -->
              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="privacy-consent"
                  required
                  aria-required="true"
                  class="mt-1 w-4 h-4 rounded border-border text-teal focus:ring-teal focus:ring-2 cursor-pointer"
                />
                <label for="privacy-consent" class="text-sm text-text-secondary cursor-pointer">
                  <a
                    href={`${base}privacy-policy/`}
                    class="text-navy hover:text-teal underline decoration-navy/30 hover:decoration-teal transition-colors duration-200"
                    target="_blank"
                    rel="noopener noreferrer"
                  >プライバシーポリシー</a>に同意します
                  <span class="text-red-500" aria-label="必須">*</span>
                </label>
              </div>

              <!-- Submit button -->
              <div>
                <button
                  type="submit"
                  id="submit-btn"
                  class="inline-flex items-center justify-center gap-2 w-full sm:w-auto px-8 py-4 bg-navy text-white font-bold rounded-[var(--radius-button)] transition-all duration-200 hover:bg-navy-light hover:shadow-card-hover active:scale-[0.98] focus-visible:ring-2 focus-visible:ring-navy/50 disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  送信する
                </button>
              </div>

              <!-- Result message area -->
              <div id="form-result" aria-live="polite" class="hidden">
                <!-- Success/error messages inserted by JS -->
              </div>
            </form>
          </div>
        </AnimateOnScroll>

        <!-- Right: Contact Info Card -->
        <AnimateOnScroll delay={200}>
          <aside class="lg:sticky lg:top-8">
            <div class="bg-surface-dim rounded-[var(--radius-card)] p-8 border border-border">
              <h3 class="text-lg font-bold text-text-primary mb-6">お問い合わせ先</h3>

              <div class="space-y-5">
                <!-- Company name -->
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center rounded-lg bg-navy/5 text-navy shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-text-secondary mb-0.5">会社名</p>
                    <p class="font-bold text-text-primary">{company.name}</p>
                  </div>
                </div>

                <!-- Address -->
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center rounded-lg bg-navy/5 text-navy shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-text-secondary mb-0.5">所在地</p>
                    <p class="font-medium text-text-primary text-sm leading-relaxed">
                      {company.postalCode}<br />{company.address}
                    </p>
                  </div>
                </div>

                <!-- Phone -->
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center rounded-lg bg-navy/5 text-navy shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-text-secondary mb-0.5">TEL</p>
                    <a
                      href={`tel:${company.tel}`}
                      class="font-medium text-navy hover:text-teal transition-colors duration-200"
                    >
                      {company.tel}
                    </a>
                  </div>
                </div>

                <!-- Email -->
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center rounded-lg bg-navy/5 text-navy shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-text-secondary mb-0.5">Email</p>
                    <a
                      href={`mailto:${company.email}`}
                      class="font-medium text-navy hover:text-teal transition-colors duration-200 break-all"
                    >
                      {company.email}
                    </a>
                  </div>
                </div>
              </div>

              <!-- Note -->
              <div class="mt-8 pt-6 border-t border-border">
                <p class="text-sm text-text-secondary leading-relaxed">
                  お気軽にご連絡ください。通常1-2営業日以内にご返信いたします。
                </p>
              </div>
            </div>
          </aside>
        </AnimateOnScroll>
      </div>
    </Container>
  </section>
</PageLayout>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement | null;
  const resultDiv = document.getElementById("form-result") as HTMLDivElement | null;
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement | null;

  if (form && resultDiv && submitBtn) {
    form.addEventListener("submit", async (e: Event) => {
      e.preventDefault();

      // Validate privacy consent (not submitted to server)
      const consent = document.getElementById("privacy-consent") as HTMLInputElement | null;
      if (consent && !consent.checked) {
        resultDiv.className = "mt-4 p-4 rounded-[var(--radius-button)] bg-red-50 border border-red-200 text-red-700 text-sm";
        resultDiv.textContent = "プライバシーポリシーに同意してください。";
        return;
      }

      // Disable button
      submitBtn.disabled = true;
      submitBtn.textContent = "送信中...";

      try {
        const formData = new FormData(form);
        // Remove privacy consent from form data (not needed by web3forms)
        formData.delete("botcheck");

        const response = await fetch("https://api.web3forms.com/submit", {
          method: "POST",
          body: formData,
        });

        const data = await response.json();

        if (data.success) {
          resultDiv.className = "mt-4 p-4 rounded-[var(--radius-button)] bg-teal/10 border border-teal/30 text-teal-dark text-sm";
          resultDiv.innerHTML = `
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>お問い合わせありがとうございます。内容を確認の上、折り返しご連絡いたします。</span>
            </div>
          `;
          form.reset();
        } else {
          throw new Error(data.message || "送信に失敗しました");
        }
      } catch (error) {
        resultDiv.className = "mt-4 p-4 rounded-[var(--radius-button)] bg-red-50 border border-red-200 text-red-700 text-sm";
        resultDiv.innerHTML = `
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>送信に失敗しました。お手数ですが、時間をおいて再度お試しいただくか、メールにて直接ご連絡ください。</span>
          </div>
        `;
      } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          送信する
        `;
      }
    });
  }
</script>
