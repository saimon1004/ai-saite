---
import PageLayout from "../../layouts/PageLayout.astro";
import SectionHeading from "../../components/common/SectionHeading.astro";
import StepFlow from "../../components/services/StepFlow.astro";

const base = import.meta.env.BASE_URL;

const services = [
  {
    title: "総務体制構築",
    description: "社内規程整備、文書管理、業務フロー最適化を通じて、組織運営の基盤を整えます。",
    details: ["社内規程の整備・見直し", "文書管理体制の構築", "業務フローの可視化と最適化"],
    icon: "building",
  },
  {
    title: "データ管理",
    description: "データベース構築から情報セキュリティ、業務データ分析基盤の整備まで包括的に支援します。",
    details: ["データベースの設計・構築", "情報セキュリティ体制の整備", "業務データ分析基盤の構築"],
    icon: "database",
  },
  {
    title: "BCP策定",
    description: "事業継続計画の策定、リスク評価、緊急時対応マニュアルの整備で、企業の継続性を確保します。",
    details: ["事業継続計画（BCP）の策定", "リスク評価と対策立案", "緊急時対応マニュアル作成"],
    icon: "shield",
  },
];

const steps = [
  {
    number: 1,
    title: "ヒアリング",
    description: "現在のバックオフィス体制と課題を詳しくお伺いし、優先的に取り組むべき領域を特定します。",
  },
  {
    number: 2,
    title: "現状分析",
    description: "業務フロー、データ管理状況、リスク要因を分析し、改善ポイントを洗い出します。",
  },
  {
    number: 3,
    title: "改善提案",
    description: "分析結果に基づき、具体的な改善施策とロードマップをご提案します。",
  },
  {
    number: 4,
    title: "導入・運用支援",
    description: "改善施策の実行を伴走支援し、定着するまでフォローアップを行います。",
  },
];
---

<PageLayout
  title="バックオフィス構築支援 | 株式会社SAIMON"
  description="株式会社SAIMONのバックオフィス構築支援。総務体制構築、データ管理、BCP策定まで、企業の基盤を支えるバックオフィス業務を包括的に支援します。"
  breadcrumbs={[
    { label: "サービス", href: `${base}services/` },
    { label: "バックオフィス構築支援" },
  ]}
>
  <!-- Hero Section -->
  <section class="bg-navy py-20 md:py-28 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10" aria-hidden="true">
      <div class="absolute bottom-20 right-10 w-64 h-64 rounded-full bg-teal blur-3xl" />
      <div class="absolute top-10 left-20 w-48 h-48 rounded-full bg-white blur-2xl" />
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
      <p class="text-teal font-bold text-sm md:text-base tracking-wider uppercase mb-4">Back Office Support</p>
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-black text-white mb-6">
        バックオフィス構築支援
      </h1>
      <p class="text-lg md:text-xl text-white/80 max-w-2xl mx-auto leading-relaxed">
        企業の基盤を支える仕組みづくり
      </p>
    </div>
  </section>

  <!-- 支援内容 Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="支援内容"
        subtitle="3つの領域で企業基盤を強化"
      />
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
        {services.map((service) => (
          <div class="bg-surface rounded-[var(--radius-card)] border border-border p-6 md:p-8 hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1">
            {/* Icon */}
            <div class="w-14 h-14 rounded-xl bg-navy/5 flex items-center justify-center text-navy mb-5">
              {service.icon === "building" && (
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21" />
                </svg>
              )}
              {service.icon === "database" && (
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
                </svg>
              )}
              {service.icon === "shield" && (
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              )}
            </div>

            {/* Title */}
            <h3 class="text-xl font-bold text-navy mb-3">{service.title}</h3>

            {/* Description */}
            <p class="text-sm text-text-secondary leading-relaxed mb-5">{service.description}</p>

            {/* Details */}
            <ul class="space-y-2">
              {service.details.map((detail) => (
                <li class="flex items-start gap-2 text-sm">
                  <svg class="w-4 h-4 text-teal shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-text-primary">{detail}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- 導入の流れ Section -->
  <section class="py-16 md:py-24 bg-surface-dim">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="導入の流れ"
        subtitle="4つのステップで業務基盤を構築"
      />
      <div class="max-w-3xl mx-auto">
        <StepFlow steps={steps} />
      </div>
    </div>
  </section>
</PageLayout>
