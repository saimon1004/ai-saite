---
import PageLayout from "../../layouts/PageLayout.astro";
import SectionHeading from "../../components/common/SectionHeading.astro";
import ServiceCard from "../../components/services/ServiceCard.astro";

const base = import.meta.env.BASE_URL;

const services = [
  {
    title: "採用定着プログラム",
    description:
      "経営計画から逆算した採用戦略で、中小企業の「採用できない」「定着しない」を根本から解決。5つの柱と7つの特徴で、持続可能な採用体制を構築します。",
    href: `${base}services/recruitment/`,
    icon: "recruitment" as const,
  },
  {
    title: "AI IMPACT LAB",
    description:
      "3日間の実践型AI研修プログラム。ChatGPT、Claude、Geminiなど最新ツールのハンズオン中心で、組織のAI活用力を飛躍的に向上させます。",
    href: `${base}services/ai-impact-lab/`,
    icon: "ai" as const,
  },
  {
    title: "バックオフィス構築支援",
    description:
      "総務体制構築、データ管理、BCP策定まで、企業の基盤を支えるバックオフィス業務を包括的に支援。業務フローの最適化で経営効率を高めます。",
    href: `${base}services/backoffice/`,
    icon: "backoffice" as const,
  },
];
---

<PageLayout
  title="サービス一覧 | 株式会社SAIMON"
  description="株式会社SAIMONのサービス一覧。採用定着プログラム、AI研修（AI IMPACT LAB）、バックオフィス構築支援の3つのサービスで企業の成長を支援します。"
  breadcrumbs={[
    { label: "サービス" },
  ]}
>
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="サービス一覧"
        subtitle="「面白い」を実現するための3つのソリューション。採用から組織基盤まで、企業の成長を包括的にサポートします。"
      />

      <!-- Intro Text -->
      <div class="max-w-3xl mx-auto text-center mb-16">
        <p class="text-text-secondary leading-relaxed">
          株式会社SAIMONは、中小企業が抱える「人が採れない」「定着しない」「業務が回らない」という課題を、
          テクノロジーと確かなメソッドで解決する経営コンサルティング会社です。
          採用戦略の立案から、最新AI技術の導入、バックオフィスの仕組みづくりまで、
          企業の「面白い」未来を一緒に創ります。
        </p>
      </div>

      <!-- Service Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
        {services.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            href={service.href}
            icon={service.icon}
          />
        ))}
      </div>
    </div>
  </section>
</PageLayout>
