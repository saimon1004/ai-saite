---
import PageLayout from "../../layouts/PageLayout.astro";
import SectionHeading from "../../components/common/SectionHeading.astro";
import Button from "../../components/common/Button.astro";
import PillarCard from "../../components/services/PillarCard.astro";
import StepFlow from "../../components/services/StepFlow.astro";
import CaseStudyCard from "../../components/services/CaseStudyCard.astro";
import PricingTable from "../../components/services/PricingTable.astro";
import FAQAccordion from "../../components/services/FAQAccordion.astro";
import FounderProfile from "../../components/services/FounderProfile.astro";

const base = import.meta.env.BASE_URL;

const pillars = [
  {
    number: 1,
    title: "3年先を見据えた採用計画",
    description: "経営計画と連動した中長期的な人材戦略を策定し、場当たり的な採用から脱却します。",
  },
  {
    number: 2,
    title: "競合に勝つための採用戦略",
    description: "同業他社の採用条件を徹底リサーチし、自社の強みを最大限に活かした差別化戦略を構築します。",
  },
  {
    number: 3,
    title: "応募が集まるチャネル活用",
    description: "ターゲット人材に最も効果的なチャネルを選定し、採用コストの最適化を実現します。",
  },
  {
    number: 4,
    title: "求職者目線の求人票",
    description: "求職者が本当に知りたい情報を、魅力的かつ具体的に伝える求人票を作成します。",
  },
  {
    number: 5,
    title: "中長期的な人材見極め",
    description: "スキルだけでなく、企業文化とのフィットや成長ポテンシャルを見極める評価基準を設計します。",
  },
];

const features = [
  {
    title: "経営計画から逆算した採用戦略",
    description: "単なる欠員補充ではなく、3年後のビジョンから逆算した戦略的な採用計画を策定。必要な人材像を明確にし、採用のタイミングや優先順位を設計します。",
  },
  {
    title: "明確なプロセスロードマップ",
    description: "採用活動の全工程を可視化したロードマップを作成。何を・いつまでに・誰がやるかを明確にし、計画通りに進める体制を構築します。",
  },
  {
    title: "競合他社の労働条件リサーチ",
    description: "同業種・同地域の競合企業の求人内容を徹底調査。給与・福利厚生・働き方の比較から、自社の採用力を客観的に把握します。",
  },
  {
    title: "リアルな社員アンケート",
    description: "在籍社員への匿名アンケートで、会社の本当の魅力と課題を抽出。入社理由・満足度・改善要望から採用メッセージの核を見つけます。",
  },
  {
    title: "精密なターゲットペルソナ設定",
    description: "年齢・経験・価値観・転職動機まで具体化したペルソナを設計。ターゲットに刺さるメッセージと訴求ポイントを明確にします。",
  },
  {
    title: "超具体的な求人票",
    description: "「やりがいのある仕事です」のような曖昧な表現を排除。具体的な数字・エピソード・1日の流れを盛り込んだ、求職者の心を動かす求人票を作成します。",
  },
  {
    title: "長期継続しやすい料金体系",
    description: "初月無料・月額制で始めやすく、成果が出るまで伴走し続けます。人材紹介の高額フィーに頼らない、持続可能な採用体制を構築します。",
  },
];

const steps = [
  { number: 1, title: "無料相談・ヒアリング", description: "現在の採用課題と経営ビジョンを詳しくお伺いします。" },
  { number: 2, title: "現状分析・競合調査", description: "採用市場、競合他社の労働条件を徹底リサーチします。" },
  { number: 3, title: "社員アンケート実施", description: "在籍社員の声を集め、自社の魅力と課題を可視化します。" },
  { number: 4, title: "採用戦略・ロードマップ策定", description: "経営計画と連動した具体的な採用戦略を策定します。" },
  { number: 5, title: "求人票作成・公開", description: "ターゲットに刺さる具体的な求人票を作成し、最適チャネルで公開します。" },
  { number: 6, title: "応募者対応・面接サポート", description: "応募者への対応フローを設計し、面接の質を向上させます。" },
  { number: 7, title: "PDCAサイクル運用", description: "効果測定と改善を繰り返し、採用力を継続的に高めます。" },
];

const faqItems = [
  {
    question: "応募が来る保証はありますか？",
    answer: "申し訳ございませんが、応募数を保証することはできません。しかし、戦略立案から求人票の最適化、継続的なPDCAサイクルを通じて、応募が集まる仕組みを構築します。多くの導入企業で大幅な応募数増加を実現しています。",
  },
  {
    question: "人材紹介会社とは何が違いますか？",
    answer: "人材紹介は「候補者を紹介する」サービスですが、当社は「採用プロセス全体をコンサルティングする」サービスです。戦略立案、求人票作成、チャネル選定、面接設計まで、自社の採用力そのものを高めることで、長期的に人材紹介に頼らない体制を構築します。",
  },
  {
    question: "なぜ最低4ヶ月なのですか？",
    answer: "採用活動は、戦略策定から求人公開、応募者対応、内定、入社まで一定の期間が必要です。また、内定辞退や早期離職のリスクに対応するためにも、最低4ヶ月の継続支援が効果的な成果につながると考えています。",
  },
  {
    question: "対応できない業種はありますか？",
    answer: "基本的にすべての業種に対応可能です。採用の本質的な課題は業種を問わず共通しており、その上で業種ごとの特性に合わせた戦略をカスタマイズしてご提案します。これまで、医療・介護、建設、IT、飲食、士業など幅広い業種で実績があります。",
  },
];
---

<PageLayout
  title="採用定着プログラム | 株式会社SAIMON"
  description="株式会社SAIMONの採用定着プログラム。経営計画から逆算した採用戦略で、中小企業の「採用できない」「定着しない」を根本から解決します。"
  breadcrumbs={[
    { label: "サービス", href: `${base}services/` },
    { label: "採用定着プログラム" },
  ]}
>
  <!-- Hero Section -->
  <section class="bg-navy py-20 md:py-28 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10" aria-hidden="true">
      <div class="absolute top-10 right-10 w-64 h-64 rounded-full bg-teal blur-3xl" />
      <div class="absolute bottom-10 left-10 w-48 h-48 rounded-full bg-white blur-2xl" />
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
      <p class="text-teal font-bold text-sm md:text-base tracking-wider uppercase mb-4">Recruitment Program</p>
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-black text-white mb-6">
        採用定着プログラム
      </h1>
      <p class="text-lg md:text-xl text-white/80 max-w-2xl mx-auto leading-relaxed">
        採用は扉を開く。定着は未来を創る。
      </p>
    </div>
  </section>

  <!-- 概要 Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="概要"
        subtitle="中小企業の採用課題を根本から解決する"
      />
      <div class="max-w-3xl mx-auto">
        <p class="text-text-secondary leading-relaxed text-center">
          「求人を出しても応募が来ない」「採用してもすぐに辞めてしまう」
          中小企業の経営者が抱える採用の悩みは深刻です。
          採用定着プログラムは、場当たり的な採用活動ではなく、
          経営計画から逆算した戦略的なアプローチで、
          「採用できて、定着する」仕組みを構築します。
        </p>
      </div>
    </div>
  </section>

  <!-- 5つの柱 Section -->
  <section class="py-16 md:py-24 bg-surface-dim">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="定着する採用の方程式"
        subtitle="5つの柱で採用力を根本から強化"
      />
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {pillars.map((pillar) => (
          <PillarCard
            number={pillar.number}
            title={pillar.title}
            description={pillar.description}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- 7つの特徴 Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="7つの特徴"
        subtitle="他にはない、SAIMONならではのアプローチ"
      />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
        {features.map((feature, index) => (
          <div class="animate-fade-up flex gap-4 p-6 rounded-[var(--radius-card)] bg-surface border border-border hover:shadow-card transition-shadow duration-300" style={`transition-delay: ${index * 80}ms;`}>
            <span class="text-3xl font-black text-teal/30 shrink-0 leading-none">
              {String(index + 1).padStart(2, "0")}
            </span>
            <div>
              <h3 class="text-base md:text-lg font-bold text-navy mb-2">{feature.title}</h3>
              <p class="text-sm text-text-secondary leading-relaxed">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- 導入の流れ Section -->
  <section class="py-16 md:py-24 bg-surface-dim">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="導入の流れ"
        subtitle="7つのステップで採用力を強化"
      />
      <div class="max-w-3xl mx-auto">
        <StepFlow steps={steps} />
      </div>
    </div>
  </section>

  <!-- 導入事例 Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="導入事例"
        subtitle="多様な業種で成果を実現"
      />
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
        <CaseStudyCard
          metric="100+"
          metricLabel="応募数"
          industry="訪問看護"
          description="人材紹介に頼らず、自社採用で100件以上の応募を獲得。紹介手数料が高騰する看護業界で、持続可能な採用チャネルを確立しました。"
        />
        <CaseStudyCard
          metric="約400"
          metricLabel="応募数"
          industry="遺品整理"
          description="人口3,000人規模の小さな町でも、具体的な求人票と適切なチャネル選定で約400件の応募を獲得。地方採用の可能性を実証しました。"
        />
        <CaseStudyCard
          metric="120+"
          metricLabel="8ヶ月間の応募数"
          industry="会計事務所"
          description="税理士・公認会計士などの資格保有者の採用に成功。専門職の採用が難しいとされる士業分野で、8ヶ月間で120件以上の応募を実現しました。"
        />
      </div>
    </div>
  </section>

  <!-- 料金プラン Section -->
  <section class="py-16 md:py-24 bg-surface-dim">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="料金プラン"
        subtitle="長期継続しやすい月額制"
      />
      <div class="max-w-4xl mx-auto">
        <PricingTable />
      </div>
    </div>
  </section>

  <!-- よくある質問 Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="よくある質問"
        subtitle="採用定着プログラムに関するご質問"
      />
      <div class="max-w-3xl mx-auto">
        <FAQAccordion items={faqItems} />
      </div>
    </div>
  </section>

  <!-- 代表プロフィール Section -->
  <section class="py-16 md:py-24 bg-surface-dim">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading
        title="代表プロフィール"
        subtitle="採用定着のプロフェッショナル"
      />
      <div class="max-w-4xl mx-auto">
        <FounderProfile />
      </div>
    </div>
  </section>
</PageLayout>
