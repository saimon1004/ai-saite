---
import "../styles/global.css";
import { siteConfig } from "../data/seo";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonicalUrl?: string;
  jsonLd?: object;
}

const {
  title,
  description,
  ogImage = siteConfig.defaultOgImage,
  canonicalUrl,
  jsonLd,
} = Astro.props;

const pageTitle = title === siteConfig.siteName
  ? title
  : `${title} | ${siteConfig.siteName}`;

const resolvedOgImage = ogImage.startsWith("http")
  ? ogImage
  : new URL(import.meta.env.BASE_URL + ogImage.replace(/^\//, ""), Astro.site).href;

const resolvedCanonical = canonicalUrl || Astro.url.href;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg?v=3`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${import.meta.env.BASE_URL}favicon-32x32.png?v=3`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${import.meta.env.BASE_URL}favicon-16x16.png?v=3`} />
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}favicon.ico?v=3`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${import.meta.env.BASE_URL}apple-touch-icon.png?v=3`} />

    <!-- SEO Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={resolvedCanonical} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={resolvedOgImage} />
    <meta property="og:url" content={resolvedCanonical} />
    <meta property="og:locale" content={siteConfig.locale} />
    <meta property="og:site_name" content={siteConfig.siteName} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content={siteConfig.twitterCard} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={resolvedOgImage} />

    <!-- JSON-LD Structured Data -->
    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}
  </head>
  <body class="min-h-screen flex flex-col bg-surface text-text-primary font-sans antialiased">
    <slot />

    <!-- FAQ動画チャットボット -->
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}faq-chatbot.css`} />
    <script is:inline define:vars={{ basePath: import.meta.env.BASE_URL }}>
      window.FAQChatbotConfig = {
        videoBasePath: basePath + 'videos/chatbot/',
        triggerVideoUrl: basePath + 'videos/chatbot/greeting.mp4',
        videos: [
          { id: 'greeting', videoUrl: 'greeting.mp4', duration: 16, isPlaceholder: false },
        ],
        config: {
          subtitles: [
            { start: 0, end: 2, text: 'やっぱり押しちゃいますよね' },
            { start: 2, end: 5.5, text: '実はこのチャットボットも\n研修の中で作れるようになります' },
            { start: 5.5, end: 9.5, text: 'FAQの自動応答や\nサービスのアピールとしても活用できるので' },
            { start: 9.5, end: 12.5, text: '御社のサイトにも\nぜひ取り入れてみてください' },
            { start: 12.5, end: 16, text: '気になった方は\nお気軽に無料相談へどうぞ！' },
          ],
        },
      };
      var _s = document.createElement('script');
      _s.src = basePath + 'faq-chatbot.js';
      document.body.appendChild(_s);
    </script>
  </body>
</html>
