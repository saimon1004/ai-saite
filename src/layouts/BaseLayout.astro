---
import "../styles/global.css";
import { siteConfig } from "../data/seo";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonicalUrl?: string;
  jsonLd?: object;
}

const {
  title,
  description,
  ogImage = siteConfig.defaultOgImage,
  canonicalUrl,
  jsonLd,
} = Astro.props;

const pageTitle = title === siteConfig.siteName
  ? title
  : `${title} | ${siteConfig.siteName}`;

const resolvedOgImage = ogImage.startsWith("http")
  ? ogImage
  : new URL(import.meta.env.BASE_URL + ogImage.replace(/^\//, ""), Astro.site).href;

const resolvedCanonical = canonicalUrl || Astro.url.href;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />

    <!-- SEO Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={resolvedCanonical} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={resolvedOgImage} />
    <meta property="og:url" content={resolvedCanonical} />
    <meta property="og:locale" content={siteConfig.locale} />
    <meta property="og:site_name" content={siteConfig.siteName} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content={siteConfig.twitterCard} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={resolvedOgImage} />

    <!-- JSON-LD Structured Data -->
    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}
  </head>
  <body class="min-h-screen flex flex-col bg-surface text-text-primary font-sans antialiased">
    <slot />
  </body>
</html>
