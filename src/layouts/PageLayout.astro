---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import Breadcrumb from "../components/common/Breadcrumb.astro";
import ContactCTA from "../components/common/ContactCTA.astro";
import ScrollToTop from "../components/common/ScrollToTop.astro";
import SkipLink from "../components/common/SkipLink.astro";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonicalUrl?: string;
  jsonLd?: object;
  breadcrumbs?: { label: string; href?: string }[];
}

const { title, description, ogImage, canonicalUrl, jsonLd, breadcrumbs } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  canonicalUrl={canonicalUrl}
  jsonLd={jsonLd}
>
  <SkipLink />
  <Header />

  {breadcrumbs && breadcrumbs.length > 0 && (
    <Breadcrumb items={breadcrumbs} />
  )}

  <main id="main-content" class="flex-1">
    <slot />
  </main>

  <ContactCTA />
  <Footer />
  <ScrollToTop />
</BaseLayout>
